<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="@string/select_shooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/textSelectShooter" />

    <Button
        android:text="@string/edit_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/buttonEventEditRename"
        android:id="@+id/buttonEventEditDelete" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSelectShooter"
        android:layout_alignParentStart="true"
        android:id="@+id/spinner" />

    <Button
        android:text="@string/edit_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEventEditScore"
        android:layout_above="@+id/buttonEventEditDelete"
        android:layout_alignStart="@+id/textSelectShooter" />

    <Button
        android:text="@string/edit_rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEventEditRename"
        android:layout_above="@+id/buttonEventEditDelete"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp" />
</RelativeLayout>